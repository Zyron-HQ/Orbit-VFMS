<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="IconButtonStyle">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
    </style>
    <declare-styleable name="FileTreeView">
        <attr format="integer" name="recyclerItemViewCount"/>
        <attr format="boolean" name="recyclerItemViewEnabled"/>
        <attr format="integer" name="itemViewCacheSize"/>
        <attr format="boolean" name="itemViewCachingEnabled"/>
        <attr format="integer" name="fileMapMaxSize"/>
        <attr format="boolean" name="fileMapEnabled"/> 
        <attr format="enum" name="fileTreeAnimation">
            <enum name="FallDown" value="0"/>
            <enum name="RotateIn" value="1"/>
            <enum name="ScaleUp" value="2"/>
            <enum name="SlideIn" value="3"/>
            <enum name="Default" value="4"/>
        </attr>
        <attr format="boolean" name="fileTreeAnimationEnabled"/>
    </declare-styleable>
</resources>